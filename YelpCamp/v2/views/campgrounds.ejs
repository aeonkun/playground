<% include partials/header %>
<div class="container ">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!!</h1>
            <p>View our list of campgrounds</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add Campground</a>
            </p>
        </div>
    </header>
    <div class="row" style="display:flex; flex-wrap:wrap;">
        <div class="col-lg-12">
            <h3>Our most popular campgrounds</h3>
        </div>
    
        <% allcamps.forEach(function(camps){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%= camps.image %>"></img>
                <div class="caption">
                    <h4>
                        <%= camps.name %>
                    </h4>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
</div>

<% include partials/footer %>